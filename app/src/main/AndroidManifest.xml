<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.semckinley.harknesstracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddActivity"
            android:label="Add Student name" />
        <activity
            android:name=".MainActivity"
            android:label="TRACKER"
            android:parentActivityName=".AddActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AddActivity" />
        </activity>
        <activity
            android:name=".LogInActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StudentDetail" />

        <provider
            android:name=".data.StudentContentProvider"
            android:authorities="com.semckinley.harknesstracker"
            android:exported="false" />

        <receiver android:name=".LastWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/last_widget_info" />
        </receiver>

        <service
            android:name=".ClassInformationService"
            android:exported="true"></service>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5879971744303882~6870610705"/>

    </application>

</manifest>